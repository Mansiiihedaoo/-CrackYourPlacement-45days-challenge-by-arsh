class Solution {
    public void rotate(int[][] matrix) {
       // Transpose the matrix
    for (int i = 0; i < matrix.length; i++) {
        for (int j = 0; j < i; j++) {
            int temp = matrix[i][j];
            matrix[i][j] = matrix[j][i];
            matrix[j][i] = temp;
        }
    }

    // Reverse each row
     for (int[] row : matrix) {
        int left = 0;
        int right = row.length - 1;
    
        while (left < right) {
            int temp = row[left];
            row[left] = row[right];
            row[right]=temp;
            left++;
            right--;
        } 
      }
    }
}   
